@model List<BookingViewModel.Result>


@{
    Layout = null;
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />

    @using (Html.BeginForm("Index", "BookingByCity", FormMethod.Post))
    {

        <label>Şehir ID Bilgisi Giriniz</label>
        <input type="text" class="form-control" name="cityID" />
        <br />
        <button class="btn btn-primary">Şehir İçin otelleri listele</button>
    }

    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Otel Adı</th>
            <th>Otel Puanı</th>
            <th>Detaylar</th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.name</td>
                <td>@item.reviewScore</td>
                <td><a href="#" class="btn btn-outline-success">Detaylar</a></td>
            </tr>
        }
    </table>
</div>
