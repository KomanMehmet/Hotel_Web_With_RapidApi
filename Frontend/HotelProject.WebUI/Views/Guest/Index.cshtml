@model List<ResultGuestDto>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h4 class="card-title">Misafir Tablosu</h4>
            <div class="table-responsive">
                <table class="table table-striped table-bordered zero-configuration">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Şehir</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td>@item.City</td>
                                <td><a href="/Guest/DeleteGuest/@item.GuestID" class=" btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
                                <td><a href="/Guest/UpdateGuest/@item.GuestID" class=" btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
                                <td><a href="/Guest/DetailGuest/@item.GuestID" class=" btn mb-1 btn-rounded btn-outline-warning">Detaylar</a></td>
                            </tr>
                        }

                    </tbody>

                </table>
                <a href="/Guest/CreateGuest/" class="btn mb-1 btn-rounded btn-outline-primary">Yeni Misafir Ekle</a>
            </div>
        </div>
    </div>
</div>

