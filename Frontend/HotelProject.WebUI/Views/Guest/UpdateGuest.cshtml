@model UpdateGuestDto

@{
    ViewData["Title"] = "UpdateGuest";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Misafir Güncelle</h4>
                    <div class="basic-form">
                        <form method="post">
                            <input type="hidden" asp-for="GuestID" />
                            <div class="form-group">
                                <input type="text" asp-for="Name" class="form-control input-rounded" placeholder="Ad">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input type="text" asp-for="Surname" class="form-control input-rounded" placeholder="Soyad">
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input type="text" asp-for="City" class="form-control input-rounded" placeholder="Şehir">
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn mb-1 btn-rounded btn-outline-success">Misafiri Güncelle</button>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

