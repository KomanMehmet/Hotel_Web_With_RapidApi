@model CreateGuestDto

@{
    ViewData["Title"] = "CreateGuest";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yeni Misafir Ekle</h4>
                    <div class="basic-form">
                        <form method="post">
                            <div class="form-group">
                                <input type="text" asp-for="Name" class="form-control input-rounded" placeholder="Ad">
                            </div>

                            <div class="form-group">
                                <input type="text" asp-for="Surname" class="form-control input-rounded" placeholder="Soyad">
                            </div>

                            <div class="form-group">
                                <input type="text" asp-for="City" required class="form-control input-rounded" placeholder="Şehir">
                            </div>


                            <button type="submit" class="btn mb-1 btn-rounded btn-outline-primary">Yeni Misafir Kaydet</button>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

