@model List<ResultRoomDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h4 class="card-title">Odalar Tablosu</h4>
            <div class="table-responsive">
                <table class="table table-striped table-bordered zero-configuration">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Oda Numarası</th>
                            <th>Oda ImageURL</th>
                            <th>Fiyat</th>
                            <th>Oda Başlığı</th>
                            <th>Yatak Sayısı</th>
                            <th>Banyo Sayısı</th>
                            <th>Wi-Fi</th>
                            <th>Açıklama</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.RoomNumber</td>
                                <td>@item.RoomCoverImage</td>
                                <td>@item.Price</td>
                                <td>@item.RoomTitle</td>
                                <td>@item.BedCount</td>
                                <td>@item.BethCount</td>
                                <td>@item.WiFi</td>
                                <td>@item.RoomDescription</td>
                                <td><a href="/AdminRoom/DeleteRoom/@item.RoomID" class=" btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
                                <td><a href="/AdminRoom/UpdateRoom/@item.RoomID" class=" btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
                                <td><a href="/AdminRoom/DetailRoom/@item.RoomID" class=" btn mb-1 btn-rounded btn-outline-warning">Detaylar</a></td>
                            </tr>
                        }

                    </tbody>

                </table>
                <a href="/AdminRoom/CreateRoom/" class="btn mb-1 btn-rounded btn-outline-primary">Yeni Oda Ekle</a>
            </div>
        </div>
    </div>
</div>

