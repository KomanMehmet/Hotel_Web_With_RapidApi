@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h4 class="card-title">Hakkımızda Tablosu</h4>
            <div class="table-responsive">
                <table class="table table-striped table-bordered zero-configuration">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık-1</th>
                            <th>Başlık-2</th>
                            <th>İçerik</th>
                            <th>Oda Sayısı</th>
                            <th>Çalışan Sayısı</th>
                            <th>Müşteri Sayısı</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.AboutTitle1</td>
                                <td>@item.AboutTitle2</td>
                                <td>@item.AboutContent</td>
                                <td>@item.RoomCount</td>
                                <td>@item.StaffCount</td>
                                <td>@item.CustomerCount</td>
                                <td><a href="/AdminAbout/UpdateAbout/@item.AboutID" class=" btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

