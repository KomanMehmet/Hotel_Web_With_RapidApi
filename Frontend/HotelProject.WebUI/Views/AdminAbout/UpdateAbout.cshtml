@model UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hakkımızda Bilgisi Güncelle</h4>
                    <div class="basic-form">
                        <form method="post">
                            <input type="hidden" asp-for="AboutID" />
                            <div class="form-group">
                                <input type="text" asp-for="AboutTitle1" class="form-control input-rounded" placeholder="Başlık 1">
                            </div>

                            <div class="form-group">
                                <input type="text" asp-for="AboutTitle2" class="form-control input-rounded" placeholder="Başlık 2">
                            </div>

                            <div class="form-group">
                                <input type="text" asp-for="AboutContent" class="form-control input-rounded" placeholder="İçerik">
                            </div>

                            <button type="submit" class="btn mb-1 btn-rounded btn-outline-warning">Hakkımızda Bilgisi Güncelle</button>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

