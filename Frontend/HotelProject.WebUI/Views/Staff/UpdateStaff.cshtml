@model UpdateStaffDto

@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Personeli Güncelle</h4>
                    <div class="basic-form">
                        <form method="post">
                            <input type="hidden" asp-for="StaffID" />
                            <div class="form-group">
                                <input type="text" asp-for="StaffName" class="form-control input-rounded" placeholder="Ad Soyad">
                            </div>

                            <div class="form-group">
                                <input type="text" asp-for="StaffTitle" class="form-control input-rounded" placeholder="Ünvan">
                            </div>

                            <div class="form-group">
                                <input type="text" asp-for="StaffImage" class="form-control input-rounded" placeholder="Fotoğraf">
                            </div>

                            <div class="form-group">
                                <input type="text" asp-for="SocialMedia1" class="form-control input-rounded" placeholder="Sosyal Medya 1">
                            </div>

                            <div class="form-group">
                                <input type="text" asp-for="SocialMedia2" class="form-control input-rounded" placeholder="Sosyal Medya 2">
                            </div>

                            <div class="form-group">
                                <input type="text" asp-for="SocialMedia3" class="form-control input-rounded" placeholder="Sosyal Medya 3">
                            </div>

                            <button type="submit" class="btn mb-1 btn-rounded btn-outline-success">Personeli Güncelle</button>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

