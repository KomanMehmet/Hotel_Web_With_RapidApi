@model List<ResultContactDto>

@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="email-left-box">
    <a href="/AdminContact/CreateSendMessage/" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
    @await Html.PartialAsync("/Views/AdminContact/SideBarAdminContactPartial.cshtml")

    <h5 class="mt-5 m-b-10">Kategoriler</h5>
    @await Html.PartialAsync("/Views/AdminContact/SideBarAdminContactCategoryPartial.cshtml")

</div>
<div class="email-right-box">
    <div class="toolbar">
        <div class="btn-group">
            <a href="#" class="btn btn-dark border-0"><span class="fa fa-tags f-s-14 mr-2"></span>Gelen Mesajlar</a>
        </div>
    </div>
    <div class="email-list m-t-15">
        @foreach(var item in Model)
        {
            <div class="message">
                <a href="email-read.html">
                    <div class="col-mail col-mail-1">
                        <div class="email-checkbox">
                            <input type="checkbox" id="chk2">
                            <label class="toggle" for="chk2"></label>
                        </div><span class="star-toggle ti-star"></span>
                    </div>
                    <div class="col-mail col-mail-2">
                        <div class="subject">@item.Message.Substring(0,50)</div>
                        <div class="date">@item.Date.ToShortDateString()</div>
                    </div>
                </a>
            </div>
        }
        
    </div>
</div>


