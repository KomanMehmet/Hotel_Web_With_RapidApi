@model List<TestimonialViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Referans Tablosu</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>Referans Ad Soyad</th>
                                    <th>Referans Ünvan</th>
                                    <th>Referans Açıklama</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                    <th>Detaylar</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.TestimonialName</td>
                                        <td>@item.TestimonialTitle</td>
                                        <td>@item.TestimonialDescription</td>
                                        <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class=" btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
                                        <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class=" btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
                                        <td><a href="#" class=" btn mb-1 btn-rounded btn-outline-warning">Detaylar</a></td>
                                    </tr>
                                }

                            </tbody>

                        </table>

                        <a href="/Testimonial/CreateTestimonial/" class="btn mb-1 btn-rounded btn-outline-primary">Yeni Referans Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

