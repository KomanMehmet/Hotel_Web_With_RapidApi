@model List<ResultBookingDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid">
    <div class="row">
            <h4 class="card-title">Rezervasyon Tablosu</h4>
            <div class="table-responsive">
                <table class="table table-striped table-bordered zero-configuration">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Giriş Tarihi</th>
                            <th>Çıkış Tarihi</th>
                            <th>Durum</th>
                            <th>Onayla</th>
                            <th>İptal Et</th>
                            <th>Beklet</th>
                            <th>Güncelle</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Name</td>
                                <td>@(((DateTime)item.CheckIn).ToString("dd-MMM-yyyy"))</td>
                                <td>@(((DateTime)item.CheckOut).ToString("dd-MMM-yyyy"))</td>
                                <td>@item.Status</td>
                            <td><a href="/AdminBooking/ApprovedBooking/@item.BookingID" class=" btn mb-1 btn-rounded btn-outline-success">Onayla</a></td>
                                <td><a href="/Booking/UpdateBooking/@item.BookingID" class=" btn mb-1 btn-rounded btn-outline-danger">İptal Et</a></td>
                                <td><a href="#" class=" btn mb-1 btn-rounded btn-outline-warning">Beklet</a></td>
                                <td><a href="#" class=" btn mb-1 btn-rounded btn-outline-info">Güncelle</a></td>
                                <td><a href="#" class=" btn mb-1 btn-rounded btn-outline-dark">Detaylar</a></td>
                            </tr>
                        }

                    </tbody>

                </table>

                <a href="/Booking/CreateBooking/" class="btn mb-1 btn-rounded btn-outline-primary">Yeni Rezervasyon Ekle</a>
            </div>
        </div>

    </div>


