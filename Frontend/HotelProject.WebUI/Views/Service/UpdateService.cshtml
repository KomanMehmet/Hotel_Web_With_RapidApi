@model UpdateServiceDto

@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hizmet Bilgisi Güncelle</h4>
                    <div class="basic-form">
                        <form method="post">
                            <input type="hidden" asp-for="ServiceID" />
                            <div class="form-group">
                                <input type="text" asp-for="ServiceTitle" class="form-control input-rounded" placeholder="Service Başlığı">
                            </div>

                            <div class="form-group">
                                <input type="text" asp-for="ServiceDescription" class="form-control input-rounded" placeholder="Servis Açıklaması">
                            </div>

                            <div class="form-group">
                                <input type="text" asp-for="ServiceIcon" class="form-control input-rounded" placeholder="Servis Icon">
                            </div>

                            <button type="submit" class="btn mb-1 btn-rounded btn-outline-success">Hizmeti Güncelle</button>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

